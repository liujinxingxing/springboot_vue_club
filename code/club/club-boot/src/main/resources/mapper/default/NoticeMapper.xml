<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.club.core.mapper.NoticeMapper">


    <select id="list" resultType="com.club.core.model.Notice">
        SELECT t.*
        FROM CLUB_NOTICE t
        WHERE 1 = 1
        <if test="keyword != null and keyword != ''">
            AND t.DESCRIPTER LIKE #{keyword}
        </if>
        <if test="mode != -1">
            AND t.MODE = #{mode}
        </if>
        ORDER BY t.UPDATE_TIME DESC
    </select>


</mapper>